<%- include('../partials/header') %>

<form id="add-new-palace" action="/palaces" method="POST">
    <label>Name: </label>
    <input type="text" name="palaceName">
    <label>Location: </label>
    
    <input type="text" name="location">
    <label>Google Maps Link: </label>
    <input type="text" name="googleMapLink">

    <label>Construction Start End: </label>
    <input type="text" name="constructionStart">

    <label>Construction End Date: </label>
    <input type="text" name="constructionEnd">

    <label>Built By: </label>
    <input type="text" name="builtBy">

    <label>Current Owner: </label>
    <input type="text" name="currentOwner">

    <label>Open to Public: </label>
    <input type="checkbox" name="openToPublic">

    <input id="addPalace" type="submit" value="Add Palace/Fort">
</form>

